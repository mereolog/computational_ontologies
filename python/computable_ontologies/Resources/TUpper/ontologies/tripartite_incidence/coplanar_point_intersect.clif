(cl-text http://colore.oor.net/tripartite_incidence/coplanar_point_intersect.clif

(cl-imports http://colore.oor.net/tripartite_incidence/weak_tripartite.clif)

(forall (p)
	(if	(point p)
		(exists (l1 l2 q)
			(and	(line l1)
				(line l2)
				(not (= l1 l2))
				(plane q)
				(in l1 q)
				(in l2 q)
				(in p l1)
				(in p l2)))))

)
