(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/tarski_geometry/circle_tarski.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/tarski_geometry/weak_tarski.clif)

(cl-comment 'A segment which joins two points, one inside and one outside
the given circle, always intersects the circle.')

(forall (x y z x1 z1 u)
	(exists (y1)
		(if	(and	(congruent u x u x1)
				(congruent u z u z1)
				(between u x z)
				(between x y z))
			(and	(congruent u y u y1)
				(between x1 y1 z1)))))

)
