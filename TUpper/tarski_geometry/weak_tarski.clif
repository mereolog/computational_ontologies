(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/tarski_geometry/weak_tarski.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/tarski_geometry/congruent_tarski.clif)

(cl-comment 'Given any angle  and any point v in its interior, there exists a line segment including v, with an endpoint on each side of the angle.')
(forall (x y z u v)
	(if	(and	(between x u v)
			(between y u z)
			(not (= u v)))
		(exists (a b)
			(and	(between x y a)
				(between x z b)
				(between a v b)))))


)
