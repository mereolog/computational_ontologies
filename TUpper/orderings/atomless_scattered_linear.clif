(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/orderings/atomless_scattered_linear.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/orderings/bounded_linear_order.clif)

(forall (x y)
	(if	(and	(lt x y)
			(not (top y)))
		(exists (z)
			(and	(covers y z)
				(leq x z)))))

(forall (x y)
	(if	(and	(lt x y)
			(not (bottom x)))
		(exists (z)
			(and	(covers z x)
				(leq z y)))))

)
