(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/kinship.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/ancestor.clif)
(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/spouse.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/definitions/hasChild.clif)

(cl-comment 'These are residue axioms.')

(cl-comment 'Axiom: RES-1')
(cl-comment 'Prevent ancestor from being related (up to third cousins). Eliminates the British Royal Family.')
(forall (x y z)
	(if (and (hasSpouse x y)(ancestorOf z x))
		(not (ancestorOf z y))))
		
(cl-comment 'Axiom: RES-2')
(cl-comment 'Prevent ancestors from being spouses.')
(forall (x y z)
	(if (and (hasSpouse x y)(ancestorOf z x))
		(not (= z y))))

)