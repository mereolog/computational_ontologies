(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/definitions/grandchild.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: GC-1')
(cl-comment 'The child of a child is a grandchild.')
(forall (x)
	(iff (grandchild x)
		(exists (y z)
			(and (hasChild z y)(hasChild y x)
				(not (= x y))(not (= y z))(not (= x z))))))

)