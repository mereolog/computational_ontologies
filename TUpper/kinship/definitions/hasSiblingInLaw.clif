(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/definitions/hasSiblingInLaw.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HSIBIL-1')
(cl-comment 'A person has a sibling-in-law if their spouse has a sibling.')
(forall (x z)
	(iff (hasSiblingInLaw x z)
		(exists (y)
			(and (hasSpouse x y)(hasSibling y z)))))

)