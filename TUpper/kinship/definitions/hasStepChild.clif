(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/definitions/hasStepChild.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HSC-1')
(cl-comment 'A person has a step-child if the child is born to their spouse, but not their own.')
(forall (x z)
	(iff (hasStepChild x z)
		(exists (y)
			(and (hasParent z y)
				(not (hasParent z x))
				(hasSpouse y x)))))

)