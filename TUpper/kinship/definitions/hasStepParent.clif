(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/hasStepParent.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HSP-1')
(cl-comment 'A person has a step-parent if one of their parents remarries another person (who is not a blood relation).')
(forall (x z)
	(iff (hasStepParent z x)
		(exists (w y)
			(and (hasParent x y)
				(not (hasParent x z))
				(hasSpouse y z)))))

)