(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/definitions/halfsibling.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HBS-1')
(cl-comment 'Half-siblings have one parent in common.')
(forall (x)
	(iff (halfSibling x)
		(exists (w y z)
			(and (hasParent x y)
				(hasParent x z)
				(hasParent w y)
				(hasSpouse y z)
				(not (= x w))
				(not (= y z))))))

)