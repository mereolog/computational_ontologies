(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/stepparent.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: SP-1')
(cl-comment 'A step-parent is someone who marries someone else who has a child.')
(forall (x)
	(iff (stepparent x)
		(exists (w y z)
			(and (hasChild y z)(not (hasSpouse x w))(hasSpouse x y)(not (= w y))))))

)