(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/definitions/stepchild.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: SC-1')
(cl-comment 'A step-child is a child born to a person zs spouse, but is not the child of z.')
(forall (x)
	(iff (stepchild x)
		(exists (y z)
			(and (hasParent x y)(hasSpouse y z)(not (hasParent x z))))))

)