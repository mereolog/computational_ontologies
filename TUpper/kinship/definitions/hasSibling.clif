(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/definitions/hasSibling.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HS-1')
(cl-comment 'For children who have the same parent, they are siblings.')
(forall (x y)
	(iff (hasSibling x y)
		(exists (z)
			(and (hasChild z x)(hasChild z y)(not (= x y))))))

)