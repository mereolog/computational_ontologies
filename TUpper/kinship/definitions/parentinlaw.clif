(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/parentinlaw.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: PIL-1')
(cl-comment 'The parent of a persons spouse is their parent-in-law.')
(forall (x)
	(iff (parentinlaw x)
		(exists (y z)
			(and (hasSpouse y z)(hasParent z x)(not (= y z))))))

)