(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/theorems/simple_loop_curve_theorems.clif

(cl-imports
https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/definitions/simple_loop_curve.clif )

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/definitions/closed.clif )


(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/definitions/endpoint.clif )

(cl-comment 'Any simple loop curve is closed.')

(forall (x)
	(if
		(SimpleLoopCurve x)
		(Closed x)
	)
)

(cl-comment 'Any simple loop curve has no endpoint')

(forall (x y)
	(if
		(AtomicLoopCurve x)
		(not (Endpoint (y x)))
	)
)


(cl-comment 'Any sumple loop curve has not point contained in its boundary')

(forall (x)
	(if
		(SimpleLoopCurve x)
		(forall (y)
			(if
				(Point y)
				(not (BCont y x))
			)
		)
	)
)


)
