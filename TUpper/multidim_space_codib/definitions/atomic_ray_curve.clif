(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codib/definitions/atomic_ray_curve.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codi/definitions/point.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codi/definitions/point_region.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codi/definitions/curve.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codib/definitions/endpoint.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/multidim_space_codib/codib.clif)


(cl-comment 'An atomic ray curve is a curve without proper parts that contains exactly one endpoint and no other points.')

(forall (x)
	(iff
		(AtomicRayCurve x)
		(and
			(Curve x)
			(forall (y)
				(not (PP y x))
			)
			(exists (y)
				(and
					(Endpoint y x)
					(forall (z)
						(if
							(and
                                (Point z)
                                (Cont z x)
                            )
							(= y z)
						)
					)
				)
			)
		)
	)
)

)
