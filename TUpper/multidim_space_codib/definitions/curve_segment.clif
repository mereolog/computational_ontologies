(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/definitions/curve_segment.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/definitions/simple_curve_segment.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/curve.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codib/codib.clif)



(cl-comment 'A curve segment is a curve of which each part overlaps some simple curve segment.')


(forall (x)
	(iff
        (CurveSegment x)
		(and
            (Curve x)
			(forall (y)
                (if
                    (P y x)
                    (exists (z)
                        (and
                            (SimpleCurveSegment z)
                            (PO y z)
                        )
                    )
                )
            )
		)
	)
)


)
