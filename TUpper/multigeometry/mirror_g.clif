(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multigeometry/mirror_g.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multigeometry/multi_g.clif)

(forall (p1 l1 l2)
	(if	(and	(leq l2 l1)
			(point p1)
			(in p1 l1))
		(exists (p2)
			(and	(part p2 p1)
				(in p2 l2)))))

)
