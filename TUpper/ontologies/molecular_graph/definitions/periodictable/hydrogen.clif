(cl-text http://colore.oor.net/molecular_graph/definitions/periodictablehydrogen.clif

(cl-comment 'Element name: hydrogen')

(cl-comment 'Valence number: 1')

(cl-comment 'Axiom: E-4L')
(cl-comment 'Symbol: H')
(cl-comment 'Atomic Number: 4')
(cl-comment 'Hydrogen has at least 1 covalent bonds.')
(forall (x) 
	(if (hydrogen x)
		(and (atom x)
			(exists (a1 b1)
				(and (atom a1)
					(bond b1)
					(mol a1 b1)(mol x b1))))))

(cl-comment 'Axiom: E-4M')
(cl-comment 'Symbol: H')
(cl-comment 'Atomic Number: 4')
(cl-comment 'Hydrogen has at most 1 covalent bonds.')
(forall (x a1 a2 b1 b2)
	(if (and (hydrogen x)
		(atom a1)
		(atom a2)
		(bond b1)
		(bond b2)
		(mol a1 b1)(mol x b1)
		(mol a2 b2)(mol x b2))
	(= b1 b2)))


)