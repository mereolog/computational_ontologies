(cl-text http://colore.oor.net/molecular_graph/definitions/periodictableboron.clif

(cl-comment 'Element name: boron')

(cl-comment 'Valence number: 3')

(cl-comment 'Axiom: E-25L')
(cl-comment 'Symbol: B')
(cl-comment 'Atomic Number: 25')
(cl-comment 'Boron has at least 3 covalent bonds.')
(forall (x) 
	(if (boron x)
		(and (atom x)
			(exists (a1 a2 a3 b1 b2 b3)
				(and (atom a1)
					(atom a2)
					(atom a3)
					(bond b1)
					(bond b2)
					(bond b3)
					(not (= a1 b2))
					(not (= a1 b3))
					(not (= a2 b1))
					(not (= a2 b3))
					(not (= a3 b1))
					(not (= a3 b2))
					(mol a1 b1)(mol x b1)
					(mol a2 b2)(mol x b2)
					(mol a3 b3)(mol x b3))))))

(cl-comment 'Axiom: E-25M')
(cl-comment 'Symbol: B')
(cl-comment 'Atomic Number: 25')
(cl-comment 'Boron has at most 3 covalent bonds.')
(forall (x a1 a2 a3 a4 b1 b2 b3 b4)
	(if (and (boron x)
		(atom a1)
		(atom a2)
		(atom a3)
		(atom a4)
		(bond b1)
		(bond b2)
		(bond b3)
		(bond b4)
		(mol a1 b1)(mol x b1)
		(mol a2 b2)(mol x b2)
		(mol a3 b3)(mol x b3)
		(mol a4 b4)(mol x b4))
	(or (= b1 b2)
		(= b1 b3)
		(= b1 b4)
		(= b2 b3)
		(= b2 b4)
		(= b3 b4))))


)