(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/hasParentInLaw.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HPIL-1')
(cl-comment 'A person has a parent-in-law if their spouse has a parent.')
(forall (x z)
	(iff (hasParentInLaw x z)
		(exists (y)
			(and (hasSpouse x y)(hasParent y z)(not (= x z))(not (hasParent x z))))))

)