(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/sibling.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: SIB-1')
(cl-comment 'A sibling is a person who has the same parents of another person.')
(forall (x)
	(iff (sibling x)
		(exists (y z)
			(and (person x)(hasChild z y)(hasChild z x)
				(not (= x y))(not (= x z))(not (= y z))))))

)