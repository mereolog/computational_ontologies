(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/definitions/hasGreatPibling.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/kinship/kinship.clif)

(cl-comment 'Conservative Definitional Extension')

(cl-comment 'Axiom: HGPIB-1')
(cl-comment 'A person has a great-pibling (great-aunt or great-uncle) if their grandparent has a sibling.')
(forall (x w)
	(iff (hasGreatPibling x w)
		(exists (z)
			(and (hasGrandparent x z)(hasSibling z w)))))

)