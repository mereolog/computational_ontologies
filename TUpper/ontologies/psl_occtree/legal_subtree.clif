(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_occtree/legal_subtree.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_occtree/earlier_occtree.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_occtree/legal.clif)

(cl-comment 'The legal relation restricts arboreal activity occurrences.')

(forall (s)
	(if	(legal s)
		(arboreal s)))

(forall (s1 s2)
        (if     (precedes s1 s2)
                (earlier s1 s2)))

(cl-comment 'If an activity occurrence is legal, all earlier activity
occurrences in the occurrence tree are also legal.')

(forall (s1 s2)
        (if     (and    (legal s1)
                        (earlier s2 s1))
                (legal s2)))



)
