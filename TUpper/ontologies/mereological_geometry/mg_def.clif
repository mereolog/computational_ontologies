(cl-text  https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/mereological_geometry/mg_def.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/mereological_geometry/wmg.clif)

(forall (x y l)
(iff    (overlaps_line x y l)
	(and	(point x)
		(point y)
		(line l)
		(in x l)
		(in y l)
		(exists (z)
			(and    (point z)
				(in z l)
				(part z x)
				(part z y))))))

(forall (x y l)
(iff    (disjoint_line x y l)
	(and	(point x)
		(point y)
		(line l) 
		(in x l)
		(in y l)
		(not (exists (z)
			(and    (point z)
				(in z l)
				(part z x)
				(part z y)))))))

(forall (x y l)
(iff    (underlaps_line x y l)
	(and	(point x)
		(point y)
		(line l)
		(in x l)
		(in y l)
		(exists (z)
                	(and    (point z)
				(in z l)
				(part x z)
                        	(part y z))))))

)
