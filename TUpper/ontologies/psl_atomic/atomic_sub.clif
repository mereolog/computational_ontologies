(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_atomic/atomic_sub.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_atomic/atomic_act_mereology.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/psl_subactivity/psl_subactivity.clif)

(forall (a)
	(if	(atomic a)
		(activity a)))

(forall (x y)
	(if	(and	(atomic y)
			(subactivity x y))
		(atomic x)))

(forall (x)
	(if	(not (atomic x))
		(exists (y)
			(and	(subactivity y x)
				(atomic y)))))

)
