(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/graphs/trivially_perfect.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/graphs/cograph.clif)

(forall (x y z w)
	(if	(and	(adj x y)
			(adj y z)
			(adj z w)
			(adj w x))
		(or	(adj x z)
			(adj y w))))

)
