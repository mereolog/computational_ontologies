(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/graphs/definitions/pendant.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/graphs/undirected_graph.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/graphs/definitions/isolated_vertex.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/graphs/definitions/leaf.clif)

(forall (x)
        (iff    (pendant x)
		(and	(leaf x)
			(not (isolated_vertex x)))))

)
