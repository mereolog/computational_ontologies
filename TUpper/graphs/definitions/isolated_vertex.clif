(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/graphs/definitions/isolated_vertex.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/graphs/undirected_graph.clif)

(forall (x)
        (iff    (isolated_vertex x)
                (forall (y)
                        (if     (adj x y)
                                (= y x)))))


)
