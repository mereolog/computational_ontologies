(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereology/cisco.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereology/em_mereology.clif)

(forall (u x)
	(if (ppart u x)
		(exists (y)
			(and (atom y)(part y x)))))
			
(forall (x y)
	(if (and (covers x y)
			(atom z)
			(ppart z x)
			(not (part z y))
			(atom u)
			(ppart u x)
			(not (part u y)))
		(= z u)))

(forall (x a b)
	(if (and (part x a)(part x b))
		(exists (z)
			(and (part x z)
				(forall (u)
					(iff (part z u)
						(and (part a u)(part b u))))))))
						
(forall (x a b)
	(if (and (part x a)(part x b))
		(exists (z)
			(and (part x z)
				(forall (u)
					(iff (part u z)
						(and (part u a)(part u b))))))))

(forall (p x y)
	(if (and (atom p)(part x y)(not (part p y)))
		(exists (z)
			(and (part x z)
				(part p z)
				(part y z)
				(covers z y)))))

)
