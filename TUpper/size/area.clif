(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/size/area.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multidim_mereotopology_codi/codi_int.clif)

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multidim_mereotopology_codi/definitions/epp.clif)

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multidim_mereotopology_codi/definitions/areal_region.clif)

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/size/spatial_area.clif)

(forall (x)
	(if  	(ArealRegion x)
		(spatial_area (area x))))

(forall (x)
        (if     (ArealRegion x)   
                (lesser zero_area (area x))))

(forall (x y)
	(if	(PP x y)
		(lesser (area x) (area y))))
		
(forall (x y z)
	(if	(and	(diff x y z)
			(ArealRegion x)
			(ArealRegion y)
			(ArealRegion z))
		(= (area x) (add (area y) (area z)))))

(forall (x y)
	(if	(PP y x)
		(exists (z)
			(and	(PP z x)
				(not (= y z))
				(= (area y) (area z))))))

)

