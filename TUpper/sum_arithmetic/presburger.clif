(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/sum_arithmetic/presburger.clif

(forall (x)
	(not (= zero (sum x one))))

(forall (x y)
	(if	(= (sum x one) (sum y one))
		(= x y)))

(forall (x)
	(= x (sum x zero)))

(forall (x y)
	(= (sum (sum x y) one) (sum x (sum y one))))

(forall (p)
	(if	(and	(p zero)
			(forall (x)
				(if	(p x)
					(p (sum x one)))))
		(forall (y)
			(p y))))

)
