(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/huntington.clif

(cl-comment ‘Sets of independent postulates for betweenness’)

(cl-comment ‘postulates A-D’)

(forall (x y z)
	(if	(between x y z)
		(between z y x)))

(forall (x y z)
	(if	(and	(not (= x y))
			(not (= y z))
			(not (= x z)))
		(or	(between x y z)
			(between y x z)
			(between x z y)
			(between z x y)
			(between z y x)
			(between y z x))))

(forall (x y z)
	(if	(and	(between x y z)
			(not (= x y))
			(not (= x z))
			(not (= z y)))
		(not (between x z y))))

(forall (x y z)
	(if	(between x y z)
		(and	(not (= x y))
			(not (= x z))
			(not (= y z)))))

(cl-comment ‘postulates 1’)
(forall (x y z a b)
	(if	(and	(between x a b)
			(between a b y)
			(not (= x y))
			(not (= a b))
			(not (= a y))
			(not (= b x))
			(not (= b y)))
		(between x a y)))

(cl-comment ‘postulates 2’)
(forall (x y z a b)
	(if	(and	(between x a b)
			(between a y b)
			(not (= x y))
			(not (= a b))
			(not (= a y))
			(not (= b x))
			(not (= b y)))
		(between x a y)))

)
