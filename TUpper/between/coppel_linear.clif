(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/coppel_linear.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/coppel_pasch.clif)
(cl-comment ‘Foundations of Convex Geometry, page 39’)

(cl-comment 'Axiom L2')
(forall (a b c d)
	(if	(and	(between a b c)
			(between b c d)
			(not (= b c)))
		(between a b d)))

(forall (a b c x)
	(if	(and	(not (between a c b))
			(not (between a b c))
			(between a x b)
			(between a x c))
		(= x a)))

(forall (a b c x)
	(if	(between a c b)
		(iff	(between a x b)
			(or	(between a x c)
				(= x c)
				(between c x b)))))

)

