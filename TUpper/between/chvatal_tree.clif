(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/between/chvatal_tree.clif

(forall (u v w)
	(if	(between u v w)
		(between w v u)))

(forall (u v w z)
	(if	(and	(between u v w)
			(between v w z)
			(not (= v w)))
		(between u w z)))

(forall (u v w)
	(if	(and	(between u v w)
			(between u w z))
		(between v w z)))

(forall (u v w)
	(if	(N u v w)
		(exists (c)
			(and	(not (= c u))
				(between u c v)
				(between u c w)))))

(forall (u v w)
	(if	(and	(between u v w)
			(between v u w))
		(= u v)))

(forall (u v w)
        (iff    (N u v w)
                (and    (not (= u v))
                        (not (= u w))
                        (not (= v w))
                        (not (between u v w))
                        (not (between v w u))
                        (not (between  w u v)))))

)
