(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/shepperd.clif

(cl-comment ‘Shepperd, Transitivities of betweenness and Separation and the Definition of betweenness and Separation Groups.’)

(cl-comment ‘betweenness set -> a set between whose elements there exists a ternary relation’)
(forall (x y z)
	(if	(between x y z)
		(between z y x)))

(forall (x y z)
	(or	(between x y z)
		(between y z x)
		(between z x y)))

(forall (x y z)
	(iff	(and	(between x y z)
			(between x z y))
		(= y z)))

(forall (x y z w)
	(if	(and	(between x y z)
			(between x z w))
		(between y z w)))

)

