(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/between/burigana.clif

(cl-comment ‘Tree representations of betweenness relations defined by intersection and inclusion’)

(cl-comment ‘Section 2, (2)’)
(forall (u v w)
	(if	(between u v w)
		(between w v u)))

(cl-comment ‘Section 2, (3)’)
(forall (u v w z)
	(if	(and	(between u v w)
			(between u z v))
		(between u z w)))

(cl-comment ‘Section 2, (4)’)
(forall (u v w)
	(if	(between u v w)
		(not (between v u w))))

(cl-comment ‘Section 2, (5)’)
(forall (u v w z)
	(if	(and	(between u v w)
			(between v w z))
		(between u w z)))

(cl-comment ‘Section 2, (6)’)
(forall (u v w z)
	(if	(and	(between u v w)
			(between u w z))
		(between v w z)))

(cl-comment ‘Section 2, (7)’)
(forall (u v w)
	(if	(N u v w)
		(exists (c)
			(and	(between u c v)
				(between u c w)
				(between v c w)))))

(cl-comment ‘Define N u v w’)
(forall (u v w)
	(iff	(N u v w)
		(and	(not (= u v))
			(not (= u w))
			(not (= v w))
			(not (between u v w))
			(not (between v w u))
			(not (between  w u v)))))

)
