(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/coppel_pasch.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/between/convex_coppel.clif)

(cl-comment ‘Foundations of Convex Geometry, page 39’)

(cl-comment 'Axiom P')

(forall (a b1 b2 c1 c2)
	(if	(and	(between a c1 b1)
			(between c c2 b2))
		(exists (x)
			(and	(between b1 x c2)
				(between b2 x c1)))))

)

