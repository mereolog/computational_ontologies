(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/between/veblen.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/between/infinite_bet.clif)

(cl-comment '(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/between/pasch.clif)')
(cl-comment ‘A system of axioms for geometry’)

(cl-comment ‘Axiom I’)
(exists (p1 p2)
	(not	(= p1 p2)))

(cl-comment ‘Axiom II’)	
(forall (a b c)
	(if	(between a b c)
		(between c b a)))

(cl-comment ‘Axiom III’)		
(forall (a b c)
	(if	(between a b c)
		(not	(between b c a))))

(cl-comment ‘Axiom IV’)		
(forall (a b c)
	(if	(between a b c)
		(not (= a c))))

(cl-comment ‘Axiom V’)		
(forall (a b)
	(if	(not (= a b))
		(exists (c)
			(between a b c))))

(cl-comment ‘Axiom VII’)			
(forall (a b c)
	(iff	(collinear a b c)
		(and	(not (= a b))
			(not (= a c))
			(not (= b c))
			(or	(between a b c)
				(between b c a)
				(between c a b)))))
						
(forall (a b c d)
	(if	(and	(collinear a b c)
			(collinear a b d)
			(not (= c d)))
		(collinear a c d)))
		
(exists (a b c)
	(and	(not (= a b))
		(not (= a c))
		(not (= b c))
		(not	(or	(between a b c)
				(between b c a)
				(between c a b)))))

(cl-comment ‘Axiom VIII’)							
(forall (a b c d e)
	(if	(and	(not (collinear a b c))
			(between b c d)
			(between c e a)
			(not (= a b))
			(not (= a c))
			(not (= b c)))
		(exists (f)
			(and	(between a f b)
				(collinear d e f)))))
					
)


