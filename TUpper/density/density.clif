(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/density/density.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mass/amount.clif)

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/size/spatial_volume.clif)

(forall (v m)
	(iff	(density (dmv v m))
		(and	(amount m)
			(spatial_volume v)
			(lesser zero_volume v))))

(forall (v d)
	(if	(and	(density d)
			(spatial_volume v))
		(exists (m)
			(= (dmv v m) d))))

(forall (m d)
	(if	(and	(amount m)
			(density d))
		(exists (v)
			(= (dmv v m) d))))

(forall (x y z)
	(if	(= (dmv x y) (dmv z y))
		(= x z)))

(forall (x y z)
	(if	(= (dmv x y) (dmv x z))
		(= y z)))

(forall (a m v)
	(if	(and	(amount m)
			(spatial_volume v)
			(field a))
		(= (dmv v (mult_mass a m)) (mult_density a (dmv v m)))))

(forall (a m v)
	(if	(and	(amount m)
			(spatial_volume v)
			(field a))
		(= (dmv (mult_volume a v) m) (mult_density a (dmv v m)))))

(forall (m1 m2 v)
	(if	(and	(amount m1)
			(amount m2)
			(spatial_volume v))
		(= (dmv v (add_mass m1 m2)) (add_density (dmv v m1) (dmv v m2)))))

(forall (m v1 v2)
	(if	(and	(amount m)
			(spatial_volume v1)
			(spatial_volume v2))
		(= (dmv (add_volume v1 v2) m) (add_density (dmv v1 m) (dmv v2 m)))))

)

