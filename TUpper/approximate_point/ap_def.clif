(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/approximate_point/ap_def.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/approximate_point/ap_root.clif)

(forall (x y)
(iff	(ncdf x y)
	(exists (z)
		(and	(finer z x)
			(finer z y)))))

(forall (x y)
(iff    (meets x y)
        (and    (precedes x y)
                (not (exists (z)
                        (and    (precedes x z)
                                (precedes z y)))))))

(forall (x)
(iff    (moment x)
        (not (exists (y)
                (and    (finer y x)
                        (not (=  x y)))))))


)

