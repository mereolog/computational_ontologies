(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/bipartite_incidence/triple_lines.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/bipartite_incidence/weak_bipartite.clif)

(cl-comment 'A geometry in which at most three lines can be incident with a point.')

(forall (x y z w p)
	(if	(and	(line x)
			(line y)
			(line z)
			(line w)
			(point p)
			(in x p)
			(in y p)
			(in z p)
			(in w p))
		(or	(= z x)
			(= z y)
			(= z w)
			(= x w)
			(= y w)
			(= x y))))

)
