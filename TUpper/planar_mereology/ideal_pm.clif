(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/planar_mereology/ideal_pm.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/planar_mereology/lower_pm.clif)

(cl-module point (cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereology/mereology_def.clif))

(forall (x y z l)
        (if     (and    (point x)
                        (point y)
                        (line l)
                        (in x l)
                        (in y l)
                        (sum x y z))
                (in z l)))

(forall (x y z q)
        (if     (and    (point x)
                        (point y)
                        (plane q)
                        (in x q)
                        (in y q)
                        (sum x y z))
                (in z q)))

)
