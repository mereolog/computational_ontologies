(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/combinatorial_semigroup/monoid_TC.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/magma/monoid.clif)

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/magma/definitions/magma_def.clif)

(forall (x y z w)
	(if	(= (op x y) (op z w))
		(exists (u)
			(or	(and	(= z (op x u))
					(= y (op u w)))
				(and	(= x (op z u))
					(= w (op u y)))))))

(exists (x)
	(generator x))

(forall (x)
	(if	(generator x)
		(not (identity x))))

(forall (x y z)
	(if	(and	(= z (op x y))
			(generator z))
		(or	(identity x)
			(identity y))))

)
