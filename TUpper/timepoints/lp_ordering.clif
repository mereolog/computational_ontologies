(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/timepoints/lp_ordering.clif

(forall (x y z)
	(if	(and	(timepoint x)
			(timepoint y)
			(timepoint z)
			(before x y)
			(before y z))
		(before x z)))

(forall (x)
	(if	(timepoint x)
		(not (before x x))))

(forall (x y)
	(if	(and	(timepoint x)
			(timepoint y))
		(or	(before x y)
			(before y x)
			(= x y))))

(forall (x y)
	(iff	(bbefore x y)
		(and	(timepoint x)
			(timepoint y)
			(or	(before x y)
				(= x y)))))

)
