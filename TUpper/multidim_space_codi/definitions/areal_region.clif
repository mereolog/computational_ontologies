(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/areal_region.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/codi_basic.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/curve.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_dim/definitions/covers.clif)

(cl-comment 'Definition of an areal region as something that is of exactly one dimension greater than a curve')


(forall (x)
	(if
		(ArealRegion x)
		(forall (y)
			(iff
				(Curve y)
				(Covers x y)
			)
		)
	)
)


(forall (x y)
	(if
		(and
			(Curve y)
			(Covers x y)
		)
		(ArealRegion x)
	)
)

)