(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/connected.clif

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/codi_down.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/epp.clif)

(cl-imports https://raw.githubusercontent.com/mereolog/computational_ontologies/main/tupper/multidim_space_codi/definitions/sc.clif)

(cl-comment 'Defining when an entity is self-connected')

(cl-comment 'Con-D: definition of connectedness')

(forall (x)
	(iff
		(Con x)
        (and
            (S x)
            (forall (y)
                (if
                    (PP y x)
                    (SC y (difference x y))
                )
            )
        )
	)
)



)