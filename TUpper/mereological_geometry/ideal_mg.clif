(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereological_geometry/ideal_mg.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereological_geometry/lower_mg.clif)

(cl-module point (cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/mereology/mereology_def.clif))

(forall (x y z l)
	(if	(and	(point x)
			(point y)
			(line l)
			(in x l)
			(in y l)
			(sum x y z))
		(in z l)))

)
