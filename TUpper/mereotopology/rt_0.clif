(cl-text https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/mereotopology/rt_0.clif

(cl-comment 'axioms of the mereotopology rt_0')

(cl-imports  https://raw.githubusercontent.com/mereolog/computational_ontologies/main/TUpper/mereotopology/rt.clif)

(cl-comment 'A13: Existence of a smallest open neighborhood n(x) for every x')

(forall (x)
	(exists (y)
		(and 	
			(p x y)
			(op y)
			(forall (z)
				(if
					(and 	
						(p x z)
						(op z)
					)
					(P y z)
				)
			)
		)
	)
)


					
)
