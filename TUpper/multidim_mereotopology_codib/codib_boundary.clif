(cl-text https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multidim_mereotopology_codib/codib_boundary.clif

(cl-imports https://raw.githubusercontent.com/gruninger/colore/master/ontologies/multidim_mereotopology_codib/codib.clif)

(cl-comment 'Extend CODIB by a thin boundary operation')

(cl-comment 'BC-E1')


(forall (x y)
	(iff
		(Cont x (boundary y))
		(BCont x y)
	)
)

)